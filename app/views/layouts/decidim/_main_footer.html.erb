<div class="main-footer"> <div class="row">
    <div class="footer-logo align-items-center">
      <%= link_to "https://www.toulouse-metropole.fr/", target: "_blank", class: "main-footer__badge primary column large-4" do %>
        <%= image_pack_tag("media/images/logo-metropole-grey.png", alt: "Je participe !" ) %>
      <% end %>
      <%= link_to "https://www.toulouse.fr/", target: "_blank", class: "main-footer__badge secondary d-flex align-items-center cell column" do %>
        <%= image_pack_tag("media/images/logo-mairie.png", alt: "Mairie de Toulouse") %>
      <% end %>
    <div class="medium-8 large-6 large-offset-1 column">
      <nav class="main__footer__nav">
        <ul class="footer-nav">
          <% organization_pages = current_organization.static_pages_accessible_for(current_user) %>
          <% if organization_pages.any? %>
            <% current_organization.static_page_topics.where(show_in_footer: true).each do |page_topic| %>
              <% topic_pages = page_topic.accessible_pages_for(current_user) %>
              <% if topic_pages.any? %>
                <li><%= link_to translated_attribute(page_topic.title), decidim.page_path(topic_pages.first) %></li>
              <% end %>
            <% end %>
            <% organization_pages.where(show_in_footer: true).each do |page| %>
              <li><%= link_to translated_attribute(page.title), decidim.page_path(page) %></li>
            <% end %>
          <% end %>
        </ul>
      </nav>
    </div>
    <%= render partial: "layouts/decidim/social_media_links" %>
    </div>
  </div>
</div>
